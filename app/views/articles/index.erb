<h3>You are logged in as <%= @user.username %> </h3>
<h1>Articles</h1>

  <form action="/articles_search" method="POST">
      <p>
        <label for="search">Enter your search here: </label>
        <input type="text" id="search" name="search"></input>
        <input type="submit" value="Submit"></input>
  </form>

  <ul>
    <% @articles.each do |article| %>
      <br>
      <li><%= article.id %>. <strong>Title: <%= article.title %></strong></li>
      <br>
      <li>Content: <%= article.content %></li>
      <br>
      <li>Pseudo-Score: <%= pseudo_score_randomizer %>%</li>
      <br>
    <% end %>
  </ul>
